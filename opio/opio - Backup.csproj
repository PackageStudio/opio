<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>opio.net</PackageId>
    <Title>opio</Title>
    <Version>0.3.3</Version>
    <Authors>zero-plus</Authors>
    <Company>ZeroPlus_Studio</Company>
    <Description>opio .net command system for unity, godot.net, .net other project</Description>
    <Copyright>opio.net</Copyright>
    <PackageProjectUrl>https://github.com/PackageStudio/opio</PackageProjectUrl>
    <PackageIcon>logo.jpg</PackageIcon>
    <RepositoryUrl>https://github.com/PackageStudio/opio</RepositoryUrl>
    <RepositoryType>https://github.com/PackageStudio/opio.git</RepositoryType>
    <PackageTags></PackageTags>
    <PackageReleaseNotes>alpha of opio.net</PackageReleaseNotes>
    <PackAsTool>False</PackAsTool>
    <ToolCommandName>opio</ToolCommandName>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageReadmeFile>r.md</PackageReadmeFile>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <PackageLicenseFile>License.txt</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Update="License.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="logo.jpg">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Update="r.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
